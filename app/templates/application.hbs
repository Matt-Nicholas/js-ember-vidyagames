<div class= "container">
  <header class= "jumbotron">
    <div class="snavbar">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            {{#link-to "index" class="navbar-brand"}} VidyaGames{{/link-to}}
          </div>
          <!-- Collect the nav links, forms, and other content for toggling -->
          <div>
            <form class="navbar-form navbar-left">
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Search">
              </div>
              <button type="submit" {{action 'searchPrompt'}} class="btn btn-danger">Submit</button>
            </form>
            <ul class="nav navbar-nav navbar-right">
              <li>{{#link-to 'contact'}}Contact Us!{{/link-to}}</li>
              <li>{{#link-to 'about'}}About!{{/link-to}}</li>

            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>
    </div>
  </header>
  <iframe id="sound" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/90802014&amp;auto_play=true&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false&amp;visual=true" ></iframe>
  {{outlet}}
  <hr>
  <footer>
    {{#link-to 'contact'}}Our representatives would love to help!{{/link-to}}
    {{#link-to 'about'}}About the team!{{/link-to}}
  </footer>
</div>
