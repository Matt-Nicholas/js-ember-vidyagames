<div class="post-title">
  {{#link-to 'post' post.id}}
  <h3>{{post.title}}</h3>
  {{/link-to}}
  <h6>{{post.author}} - {{post.date}}</h6>

</div>

<div class="row">
  <div class="col-md-3">
    <div class="image-box">
      <img class="post-pic" src="{{post.image}}" alt="{{post.title}}" />
    </div>
  </div>
  <div class="col-md-9 scrollable">
    <p>{{post.article}}</p>
  </div>

</div>
