{{#if updatePostForm}}
  <h4>Update</h4>
  <div id="post-update">
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input id="title" value=post.title}}
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        {{input id="author" value=post.author}}
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        {{input id="date" value=post.date}}
      </div>
      <div class="form-group">
        <label for="image">Image URL</label>
        {{input id="image" value=post.image}}
      </div>
      <div class="form-group">
        <label for="article">Article</label>
        {{textarea id="article" value=post.article}}
      </div>
      <button {{action 'update' post}}>Save</button>
    </form>
  </div>
{{else}}
<button {{action 'updatePostForm'}}>Edit</button>
<button {{action 'delete' post}}>Delete</button>
{{/if}}
