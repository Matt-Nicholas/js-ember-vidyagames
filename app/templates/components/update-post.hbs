{{#if updatePostForm}}
  <h4>Update</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=post.title}}
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=post.author}}
      </div>
      <div class="form-group">
        <label for="article">Article</label>
        {{textarea value=article id="article" placeholder=post.article}}
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date" placeholder=post.date}}
      </div>
      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" placeholder=post.image}}
      </div>
      <button {{action 'update' post}}>Save</button>
    </form>
  </div>
{{else}}
<button {{action 'updatePostForm'}}>Edit</button>
<button {{action 'delete' post}}>Delete</button>
{{/if}}
